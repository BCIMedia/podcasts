<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <h1>Podcast Series</h1>
  </div>
  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to new_podcast_series_path, class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
      <i class="fa fa-plus"></i> Create
    <% end %>
    <%= link_to podcast_series_episodes_path(series_id: "all"), class: "admin-button universal-flex-button flex-button-natural" do %>
      All Episodes
    <% end %>
  </div>
  <div class="columns small-12">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>Episodes</th>
        </tr>
      </thead>

      <tbody>
        <% @series.each do |s| %>
          <tr>
            <td><%= link_to s.name, podcast_series_path(s) %></td>
            <td><%= s.description.truncate(200, seperator: " ") %></td>
            <td><%= s.episodes.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
