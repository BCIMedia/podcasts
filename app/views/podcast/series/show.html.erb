<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <h1>Podcast Series</h1>
    <h4><%= @series.name %></h4>
    <div><%= @series.description %></div>
  </div>
  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to edit_podcast_series_path(@series), class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
      <i class="fas fa-plus"></i> Edit
    <% end %>
  </div>

  <hr>

  <div class="columns small-12">
    <h4>Episodes</h4>
  </div>
  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to new_podcast_series_episode_path(series_id: @series.id), class: "admin-button admin-new universal-flex-button flex-button-natural" do %>
      <i class="fas fa-plus"></i> Create
    <% end %>
  </div>
  <div class="columns small-12">
    <%= render partial: "podcast/episodes/table", locals: {episodes: @series.episodes} %>
  </div>
</div>
