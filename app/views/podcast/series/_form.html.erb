<%= form_for @series, html: {class: "row"} do |f| %>
  <% if @series.errors.any? %>
    <div class="small-12 columns">
      <div id="error_explanation">
        <h2><%= pluralize(@series.errors.count, "error") %> prohibited this series from being saved:</h2>

        <ul>
          <% @series.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="columns small-12">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="columns small-12">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle, placeholder: "Single sentence description" %>
  </div>
  <div class="columns small-12">
    <%= f.label :summary, placeholder: "Summarise your series, try to keep it short" %>
    <%= f.text_area :summary %>
  </div>
  <div class="columns small-12">
    <%= f.label :description %>
    <%= f.text_area :description, placeholder: "Fully describe your series, include as much detail as possible" %>
  </div>
  <div class="columns small-12">
    <%= f.label :owner %>
    <%= f.text_field :owner %>
  </div>
  <div class="columns small-12">
    <%= f.label :category %>
    <%= f.text_field :category, placeholder: "If multiple seperate with commas" %>
  </div>
  <div class="columns small-12">
    <%= f.label :page_link %>
    <%= f.text_field :page_link, placeholder: "Link to where this content can be found on our site" %>
  </div>
  <div class="columns small-6">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div class="columns small-6">
    <% if @series.image.present? %>
      <%= image_tag @series.image.url %>
    <% end %>
  </div>
  <div class="columns small-4">
    <%= f.label :itunes_type %>
    <%= f.select :itunes_type, Podcast::Series.itunes_types.map { |k, v| [k.humanize, k] }, prompt: true %>
  </div>
  <div class="columns small-4">
    <%= f.label :explicit %>
    <%= f.check_box :explicit %>
  </div>
  <div class="columns small-4">
    <%= f.label :complete %>
    <%= f.check_box :complete %>
  </div>
  <div class="columns small-12">
    <div class="universal-flex-container universal-flex-natural admin-button-container">
      <%= f.submit "Submit", class: "admin-submit universal-flex-button flex-button-natural" %>
    </div>
  </div>
<% end %>
