<div class="row admin-container">
  <div class="columns small-12 admin-page-title">
    <div class="episode-container" id="episode-<%= @episode.id %>">
      <h2 class="subhead"><%= link_to @episode.series.name, podcast_series_path(@episode.series) %></h2>
      <div class="episode-card">
        <h4 class="subhead"><%= @episode.name %></h4>
        <div class="columns small-12">
          <%= image_tag(@episode.image.url) %>
        </div>
        <div class="columns small-12">
          <%= audio_tag(@episode.file.url, controls: "controls") %>
        </div>
        <div class="columns small-12">
          <%= @episode.description %>
        </div>
      </div>
    </div>
  </div>

  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to podcast_series_path(@episode.series), class: "admin-button admin-back universal-flex-button flex-button-natural" do %>
      <i class="fa fa-arrow-left"></i> Back
    <% end %>
    <%= link_to edit_podcast_series_episode_path(@episode.series, @episode), class: "admin-button admin-back universal-flex-button flex-button-natural" do %>
      Edit
    <% end %>
  </div>
</div>
