<div class="row admin-container podcast-form">
  <div class="columns small-12 admin-page-title form-title">
    <h1>Editing Episode</h1>
  </div>
  <div class="columns small-12">
    <%= render "form" %>
  </div>

  <div class="columns small-12 universal-flex-container universal-flex-natural admin-button-container">
    <%= link_to podcast_series_path(@episode.series), class: "admin-button admin-back universal-flex-button flex-button-natural" do %>
      <i class="fas fa-arrow-left"></i> Back
    <% end %>
    <%= link_to podcast_series_episode_path(@episode.series, @episode), class: "admin-button admin-back universal-flex-button flex-button-natural" do %>
      Show
    <% end %>
  </div>

</div>
